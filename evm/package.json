{
  "name": "@escrin/evm",
  "version": "1.0.0-beta.3",
  "license": "MIT",
  "keywords": [],
  "author": "Nick Hynes <nhynes@enshrine.ai>",
  "main": "./lib/cjs/src/index.js",
  "module": "./lib/esm/src/index.js",
  "types": "./lib/cjs/src/index.d.ts",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "files": [
    "contracts",
    "lib",
    "src",
    "typechain-types"
  ],
  "exports": {
    "import": "./lib/esm/src/index.js",
    "require": "./lib/cjs/src/index.js"
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin-search-dir=. --cache '*.json' 'tsconfig/*.json' 'test/**/*.ts' 'contracts/**/*.sol'",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin-search-dir=. --cache '*.json' 'tsconfig/*.json' 'test/**/*.ts' 'contracts/**/*.sol'",
    "format:solhint": "solhint --fix 'contracts/**/*.sol'",
    "format": "npm-run-all format:**",
    "build:compile": "hardhat compile",
    "build:cjs": "tsc -p tsconfig/cjs.json",
    "build:esm": "tsc -p tsconfig/esm.json",
    "build": "npm-run-all build:compile --parallel build:cjs build:esm",
    "watch:hardhat": "hardhat watch compile",
    "watch:tsc:cjs": "tsc -p tsconfig/cjs.json --watch --preserveWatchOutput",
    "watch:tsc:esm": "tsc -p tsconfig/esm.json --watch --preserveWatchOutput",
    "watch": "npm-run-all --parallel 'watch:**'",
    "test": "hardhat test",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@oasisprotocol/sapphire-hardhat": "^1.0.3",
    "@oasisprotocol/sapphire-paratime": "^1.0.15",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.3",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-deploy": "^0.11.27",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-contracts": "^0.2.1",
    "@openzeppelin/contracts": "^4.8.3"
  }
}
